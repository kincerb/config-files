set-option visual-activity off
set-option visual-bell off
set-option allow-rename off
new-session -A -c ~/Projects/Middleware-Lifecycle-Server/app/src -s lifecycle -n Services "~/.local/venvs/lc3.10/bin/python manage.py runserver 8080"
selectw -t lifecycle:1
split-window -d -v -l 20 -t lifecycle:1 "~/.local/venvs/lc3.10/bin/celery --app=lifecycle_server beat --loglevel=INFO"
split-window -d -h -t lifecycle:1.2 "~/.local/venvs/lc3.10/bin/celery --app=lifecycle_server worker --loglevel=INFO --concurrency=2 --hostname=worker1 --task-events"
set-option -w -t lifecycle:1 remain-on-exit on
new-window -d -t lifecycle: -c ~/Projects/Middleware-Lifecycle-Core -n Core "source ~/.local/venvs/lc3.10/bin/activate; nvim ."
new-window -d -t lifecycle: -c ~/Projects/Middleware-Lifecycle-Server -n Server "source ~/.local/venvs/lc3.10/bin/activate; nvim ."
