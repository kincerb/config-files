[credential "https://github.com"]
	helper = /home/kincerb/.local/bin/git-helper.py --url https://github.com
[user]
	name = kincerb
	email = dev.bkincer@gmail.com
  signingKey = ""
[core]
  autocrlf = input
  editor = nvim
  pager = bat
[commit]
    gpgSign = false
[tag]
    forceSignAnnotated = false
[init]
    defaultBranch = main
[alias]
    h = log --graph --pretty=format:g%Cred%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Cresetl --abbrev-commit
    # short status
    s = status -sb
    # Saving typing
    c = commit
    d = diff
    co = checkout
    dc = diff --cached
    rh = reset --hard
    am = commit --amend
    cp = cherry-pick
    bls = branch --list -a
    fp = fetch --prune
    up = pull --rebase
[diff]
  algorithm = patience
  compactionHeuristic = true
  tool = nvimdiff
  [difftool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE -c 'wincmd w' -c 'wincmd L'
[merge]
  conflictStyle = diff3
  tool = nvimmerge
[mergetool "nvimmerge"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c l$wincmd wg -c 'wincmd J'

